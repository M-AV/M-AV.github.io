<tr>
    <td>
        <% if(item.image) { %>
        <img width="25" src="<%- config.root %><%- item.path %><%- item.image || '' %>" >
        <% }%>
    </td>
    <td class=""> 
        <a href="<%- config.root %><%- item.path %>">
            <h4 class="post-title">
                <%- item.title || theme.default_post_title || "Untitled" %>
            </h4>
        </a>
    </td>
    <td> <%- item.description || "" %> </td>
    <td> <%- item.comment || "" %> </td>
    <td style="text-align: center;"> <%- item.rating || "N/A" %> </td>
</tr>
